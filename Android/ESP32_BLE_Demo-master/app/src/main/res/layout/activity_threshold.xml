<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/ThresholdTitle"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/threshold_title"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF000000"
            android:id="@+id/threshline"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 1:"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />

            <TextView
                android:id="@+id/oldValueText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/threshline"
                android:paddingTop="16dp"
                android:text="NULL"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput1"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 2:"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput2"

                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 3:"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput3"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 4:"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput4"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 5:"
                android:layout_alignParentStart="true"
                android:paddingTop="16dp"
                android:layout_below="@id/newValue4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value"
                android:paddingTop="16dp"
                android:layout_below="@id/newValue4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                android:layout_below="@id/newValue4"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:layout_toRightOf="@id/Threshold5"
                android:paddingTop="4dp"
                android:layout_below="@id/oldValue5"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput5"
                android:layout_below="@id/oldValueText5"
                android:text="0"
                android:layout_toRightOf="@id/newValue5" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/loadThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Load old values"
                android:padding="16dp"
                />

            <Button
                android:id="@+id/changeUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:onClick="setThreshold"
                android:padding="16dp"
                android:text="CHANGE UNIT"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF000000"
            android:layout_below="@id/newValue5"
            android:id="@+id/threshline3"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To change the sound produced by the device, selet a number from the dropdown list below, higher number corresponds to higher pitch."
            android:id="@+id/changeToneText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_below="@+id/threshline3"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/changeToneText"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/buttonCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:text="@string/button_settings"
            android:textAlignment="center"
            android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:text="cancel"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SaveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:text="Save settings"
            android:textStyle="bold" />
    </RelativeLayout>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>
